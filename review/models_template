components:
  schemas:
    review:
      description: Отзыв в списке всех отзывов на товар
      type: object
      required:
        - review_id
        - review_rate
        - created_at
      properties:
        review_id:
          description: Идентификатор отзыва
          type: string
        review_rate:
          description: Оценка товара
          type: integer
        user:
          description: Имя пользователя, оставившего отзыв
          type: string
        created_at:
            description: Дата и время публикации отзыва
            type: string
            example: 20 августа 2019г.
        text:
          description: Текст отзыва
          type: string
          maxLength: 100
        pictures:
          description: Изображения в отзыве
          type: array
          maxItems: 5
          items:
            $ref: "models.yaml#/components/schemas/picture"
        
    reviews:
      description: Список отзывов на товар
      type: array
      items:
        $ref: "models.yaml#/components/schemas/review"
    
    picture:
      description: Ссылка на изображение товара
      type: string   

    Error:
        type: object
        required:
          - title
          - message
        properties:
          title:
            description: Код ошибки
            type: integer
            example: 404
          message:
            description: Описание ошибки
            type: string
            example: Не найдено